<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Points_Must_Be_Greater_Than_0</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK(Points__c)), Points__c &lt;= 0)</errorConditionFormula>
    <errorDisplayField>Points__c</errorDisplayField>
    <errorMessage>If populated, points must be greater than 0.</errorMessage>
</ValidationRule>
